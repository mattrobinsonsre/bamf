# BAMF API test runner
# Includes all dev dependencies (pytest, ruff, mypy)

FROM python:3.14-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl gcc python3-dev \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir poetry==1.8.4

WORKDIR /app

# Install ALL dependencies (main + dev)
COPY services/pyproject.toml services/poetry.lock* ./
RUN poetry config virtualenvs.create false \
    && poetry install --no-interaction --no-ansi

# Copy application and test code
COPY services/bamf ./bamf
COPY services/tests ./tests
COPY alembic ./alembic

# CA data directory for tests
RUN mkdir -p /var/lib/bamf/ca

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Default: run pytest
CMD ["pytest", "-v", "--tb=short"]
